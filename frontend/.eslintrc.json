{
  "extends": ["next/core-web-vitals"],
  "rules": {
    // Disable warnings for unescaped entities in JSX
    "react/no-unescaped-entities": "off",
    
    // Temporarily allow unused variables during development
    "@typescript-eslint/no-unused-vars": "warn",
    
    // Temporarily allow any type during development
    "@typescript-eslint/no-explicit-any": "warn",
    
    // Temporarily ignore exhaustive dependencies warnings
    "react-hooks/exhaustive-deps": "warn",
    
    // Disable no-empty-interface rule
    "@typescript-eslint/no-empty-interface": "off",
    
    // Temporarily disable img element warnings
    "@next/next/no-img-element": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/"
  ]
} 